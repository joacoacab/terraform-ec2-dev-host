# Archivo de ejemplo para terraform.tfvars
# Copia este archivo a terraform.tfvars y edita los valores según necesites

# Configuración básica
aws_region = "us-east-1"
project_name = "ec2-dev-host"
environment = "dev"

# Configuración de red
vpc_cidr           = "10.0.0.0/16"
public_subnet_cidr = "10.0.1.0/24"
availability_zone  = "us-east-1a"

# Configuración de la instancia
ami_id        = "ami-0c02fb55956c7d316" # Amazon Linux 2 en us-east-1
instance_type = "t3.micro"

# Configuración de LocalStack (solo para desarrollo local)
use_localstack = false
localstack_endpoint = "http://localhost:4566"
